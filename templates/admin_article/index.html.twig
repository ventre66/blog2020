{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
   <h1>Index</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Titre</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
        <tr>
            <td><img src="{{ vich_uploader_asset(article,'imageFile') }}" width="100px" alt=""></td>
            <td><a href="{{ path('test', {id: article.id, slug: article.slug}) }}">{{ article.titre }}</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
